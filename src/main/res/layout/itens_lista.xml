<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="8dp"
    app:cardCornerRadius="@dimen/browser_actions_context_menu_min_padding"
    android:id="@+id/card_view_anuncios"
    tools:context=".view.AnunciosDaSemana">

    <ImageView
        android:importantForAutofill="auto"
        android:id="@+id/imagem_evento_anuncios"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:background="@color/colorAccent"
            android:id="@+id/titulo_evento_anuncios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo"
            android:fontFamily="@font/amaranth"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/progressBarId"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>